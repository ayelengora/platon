<h1 class="text-center m-4">Mi Carrito</h1>
<div class="container">
  <table class="table table-striped table-hover">
    <thead class="thead-green">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tu plat√≥n</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Precio</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
      <tr>
        <th scope="row">1</th>
        <td> <%= item.product.name %> </td>
        <td><%= item.quantity %></td>
        <td> $ <%= item.quantity*item.subtotal_price %></td>
        <td><%= link_to cart_item_path(item), method: :delete, data:{confirm:"Quiere eliminarlo?"} do %>
          <p class="far fa-trash-alt"></p>
        <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center m-4 bg-red">
    <h5>Su total es <strong> $<%=@cart.total%> </strong></h5>
  </div>
  <div class="text-center">
    <%= simple_form_for @cart do |f| %>
      <%= f.button :submit, "Realizar compra", class:"fas fa-shopping-cart btn btn-lg btn-primary rounded p-3"%>
    <% end %>
  </div>
</div>