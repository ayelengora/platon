<% if @shop.photo.attached? %>
  <div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=cl_image_path @shop.photo.key %>)">
    <div class="container">
      <h1 class="text-center"><%= @shop.name %></h1>
      <p class="text-center"><%= @shop.address %></p>
    </div>
  </div>
<% else %>
  <div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=cl_image_path "nodisponible" %>)">
    <div class="container">
      <h1 class="text-center"><%= @shop.name %></h1>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="cards text-center">
    <% @products.each do |product| %>
      <div class="card_product">
        <div>
          <div class="card-img-top position-relative">
            <%= cl_image_tag product.photo.key, height:350, width:350, crop: :fill %>
            <div class="price">
              <p class="m-0"> $ <%= product.previous_price %></p>
              <div class="offer">
                <h6>$<%= product.unit_price %></h6>
            </div>
            </div>
          </div>
          <div class="p-3">
            <h4 class="pt-2"><%= product.name %></h4>
            <small class=""><%= product.description %></small>
            <% if current_user.active_cart.shop == @shop %>
              <% if cart_item = current_user.active_cart.cart_items.find { |item| item.product == product } %>
                <%= link_to "Agregar otro", increase_cart_item_path(cart_item), method: :PATCH, class:"btn btn-primary rounded d-flex justify-content-center"%>
              <% else %>
                <%= link_to "Agregar al Carrito", product_cart_items_path(product), method: :POST, class:"btn btn-primary rounded d-flex justify-content-center"%>
              <% end %>
            <% else %>
              <%= link_to "Agregar al Carrito", product_cart_items_path(product), method: :POST, data: { confirm: 'Tu carrito tiene productos de otro shop, si deseas continuar seran removidos!' }, class:"btn btn-primary rounded d-flex justify-content-center"%>
            <% end %>
          </div>
        </div>
    </div>
    <% end %>
      
  </div>
</div>


<% if @shop.photo.attached? %>
    <div  
      class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0. 3)), url(<%=cl_image_path @shop.photo.key %>)"> 
    </div>
  <% else %>
    <div 
      class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://thumbs.dreamstime.com/b/limpie-el-garage-19656222.jpg)"> 
    </div>
<% end %>


