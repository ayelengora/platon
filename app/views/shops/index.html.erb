<%= render 'shared/banner' %>
<div class="bg-white">
    <div class="wrapper_index">
      <h1 class="text-center pb-3">Cerca tuyo</h1>
      <div class="cards_index dragscroll">
        <% @shops.each do |shop| %>
          <%= link_to shop_path(shop) do %>
            <div class="card_product_index">
              <div class="card-img-top position-relative">
                <div class="heart">
                  <i class="fas fa-heart"></i>
                </div>
                 <% if shop.photo.attached? %>
                  <%= cl_image_tag shop.photo.key, height:300, width:300, crop: :fill %>
                <% else %>
                  <%= cl_image_tag("mojito_baggco", height:300, width:300, crop: :fill) %>
                <% end %>
              </div>
              <div class="p-3">
                <div class="rating">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="far fa-star"></i>
                  <i class="far fa-star"></i>
                  <i class="far fa-star"></i>
                </div>
                <h4 class="d-flex justify-content-center"><%= shop.name %> </h4>
                <p class="small m-0 d-flex flex-row-reverse bd-highlight"><i class="fas fa-utensils" id="icono_localizacion"></i></i><%=shop.distance_from(current_user) %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
