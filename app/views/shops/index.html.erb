<%= render 'shared/banner' %>
<div class="container">
  <h1 class="text-center">Cerca tuyo</h1>
  <ul>
    <div class="cards">
      <% @shops.each do |shop| %>
          <li>
            <div class="card_product"> 
                <div class="card-img-top position-relative">
                  <div class="heart">
                    <i class="fas fa-heart"></i>
                  </div>
                  <%= cl_image_tag("mojito_baggco", height:300, width:300, crop: :fill) %>
                </div>
                <div class="p-3">
                  <div class="rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                  </div>
                  <h4><%= link_to shop.name, shop_path(shop) %> </h4>
                  <p class="small m-0"><%=shop.address %></p>
              </div>     
          </li>
      <% end %>
    </div>
  </ul>
</div>
