  <%= simple_form_for @shop do |f| %>
  <%= f.input :name, label:"Nombre:", required: false %>
  <%= f.input :address, label:"Direccion:", required: false %>
  <%= f.input :email, label:"Email:", required: false %>
  <%= f.input :phone_number, label:"Telefono:", required: false %>
  <%= f.input :photo, as: :file, label:"AgregÃ¡ una imagen:", required: false %>
  <%= f.hidden_field :user_id, :value => current_user.id%>
  <%= f.button :submit, "Agregar", class: "btn btn-primary " %>
  <% end %>
</div>
