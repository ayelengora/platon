<%# DESTACADOS %>
<div class="destacados p-2 ">
  <div class="container p-4">
  <h1 class="text-center pb-4 text-white">Restaurants destacados</h1>
    <div class="cards d-flex justify-content-center">
      <% @destacados.each do |shop| %>
      <%= link_to shop_path(shop), class:"card_product" do %>
        <div class="card-img-top position-relative">
          <div class="heart">
            <i class="fas fa-heart"></i>
          </div>
          <% if shop.photo.attached? %>
              <%= cl_image_tag shop.photo.key, height:300, width:300, crop: :fill %>
          <% else %>
            <%= cl_image_tag("mojito_baggco", height:300, width:300, crop: :fill) %>
          <% end %>
        </div>
        <div class="p-3">
          <div class="rating">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
          </div>
          <h4><%= shop.name %></h4>
          <p class="small m-0"><%= shop.address %></p>
        </div>
      <% end %>
      <% end %>
    </div>
    <div class="text-center p-4">
      <%= link_to "Ver más", shops_path,  class:"btn btn-lg btn-primary rounded"%>
    </div>
  </div>
  </div>
</div>