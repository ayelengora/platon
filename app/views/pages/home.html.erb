<%# LOGROS PLATONICOS %>
<div class="container-fluid row align-items-center" >
  <div class="col-sm-12 col-md-6">
    <div class="content-box rounded platonicos">
      <h2 class="text-center text-dark mt-4">LOGROS PLATÓNICOS </h2>
      <div class="container text-dark">
        <div class="row text-center d-flex justify-content-center">
          <div class="border-right col-6 col-md-4 ">
            <div class="stat-items">
              <i class="fas fa-utensils"></i>
              <h2><span class="counter text-center text-primary "><%=" #{@cart_items.count}"%> + </span> </h2>
              <h4><strong>Platones Salvados</strong></h4>
            </div>
          </div>
          <div class="col-6 col-md-4 ">
            <div class="stat-items">
              <i class="far fa-money-bill-alt"></i>
              <% @cart_items.each do |item| %>
                <% @total+=item.subtotal_price %>
              <% end %>
              <h2><span class="counter text-center text-primary"> $<%= @total/2 %> </span></h2>
              <h4><strong> Ahorrados </strong></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

