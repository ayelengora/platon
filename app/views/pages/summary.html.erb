<div class="container table-responsive">
  <h1 class="text-center">Total en ventas: $  <%= get_carts_total(@carts) %></h1>
  <table class="table table-striped table-hover table-primary">
    <thead class="thead-green">
      <tr>
        <th scope="col">Cliente </th>
        <th scope="col">Pedido</th>
        <th scope="col">Total</th>
      </tr>
    </thead>
    <tbody>
      <% @carts.each do |cart| %>
        <tr>
          <td class="m-2"> <%= "#{cart.user.first_name.capitalize} #{cart.user.last_name.capitalize}"%> </td>
          <td>
            <% cart.cart_items.each do |item|%>
            <ul class="px-2"> <%= item.quantity %> - <%= item.product.name %> </ul>
            <% end %>
          </td>
          <td class="px-2"> $ <%= cart.total %></td>
        </tr>
      <% end %>
        <tr>
        <td><%= current_user.shop.name %></td>
        <td>Total en ventas</td>
        <td>$ <%= get_carts_total(@carts) %></td>
        </tr>
    </tbody>
  </table>
</div>




