<div class="container bg-white rounded mt-5 pb-4 shadow-lg">
  <h2 class="d-flex justify-content-center py-3">Registrate</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-inputs">
    <%= f.input :first_name, label: "Ingresa tu nombre:",
                  required: false,
                  autofocus: true,
                  input_html: {}%>
    <%= f.input :last_name, label: "Ingresa tu apellido:",
                  required: false,
                  autofocus: true,
                  input_html: {}%>
      <%= f.input :email, label: "Ingresa tu Email:",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :address, input_html: { id: "address-input" }, label: "Ingresa tu dirección",
                  required: false,
                  autofocus: true %>
      <%= f.input :phone_number, label: "Numero de teléfono:",
                  required: false,
                  autofocus: true,
                  input_html: {}%>
      <%= f.input :photo,
                  required: false,
                  autofocus: true,
                  as: :file,
                  label: "Ingrese foto personal" %>            
      <%= f.input :password, label: "Ingresa tu contraseña:",
                  required: false,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: "Ingresa tu contraseña nuevamente:",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Registrarse", class:"btn btn-primary " %>
    </div>
  <% end %>
</div>
<div class="container bg-white rounded mt-1 pb-2 shadow-lg">
  <p class="text-muted p-2"> ¿Ya tenes cuenta?</p>
  <p class="m-0 p-0"> <%= link_to "Iniciar Sesion", new_session_path(resource_name) %><br /> </p>
</div>
