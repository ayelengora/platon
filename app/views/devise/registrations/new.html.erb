<div class="container bg-white rounded mt-5 pb-4 shadow-sm">
  <h2 class="d-flex justify-content-center py-3">Registrate</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-inputs">
      <%= f.input :email, label: "Ingresa tu Email",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password, label: "Ingresa tu ContraseÃ±a",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: "Ingresa tu ContraseÃ±a Nuevamente",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Registrarse", class:"btn btn-primary " %>
    </div>
  <% end %>
<small class="text-muted d-flex justify-content-end align-items-end"> Ya tenes cuenta?</small>
<small class=" d-flex justify-content-end align-items-end"> <%= render "devise/shared/links" %> </small>
</div>
