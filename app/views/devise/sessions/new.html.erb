<div class="container bg-white rounded mt-5 pb-4 shadow-sm">
  <h2 class="d-flex justify-content-center py-3">Ingresa</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: "ContraseÃ±a",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Inicia Sesion" , class:"btn btn-primary"%>
    </div>
  <% end %>
<small class="text-muted d-flex justify-content-end align-items-end"> Olvidaste tu clave?</small>
<small class=" d-flex justify-content-end align-items-end"> <%= link_to "Recuperar clave", new_password_path(resource_name) %><br /></small>
</div>
<div class="container bg-white rounded mt-1 pb-2 shadow-sm">
  <p class="text-muted p-2"> No tenes cuenta?</p>
  <p class="m-0 p-0"> <%= link_to "Registrarse", new_registration_path(resource_name) %><br /> </p>
</div>
